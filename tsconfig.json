{
  "compilerOptions": {
    "experimentalDecorators": true,
    "outDir": "dist",
    "module": "commonjs",
    "target": "es2019",
    "lib": ["es6", "dom"],
    "types": ["reflect-metadata"],
    "esModuleInterop": true,
    "sourceMap": true,
    "rootDirs": ["src", "tests"],
    "baseUrl": "src",
    "paths": {
      "@tests/*": ["../tests/*"],
      "@*": ["*"]
    },
    "emitDecoratorMetadata": true
  },
  "include": ["src", "tests"],
  "exclude": []
}
